{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} - affichage des r√©sultats{% endblock %}

{% block body %}
<section class="container px-6 py-16 mx-auto">
<h1 class="text-3xl font-semibold text-center text-gray-800 dark:text-white lg:text-4xl">Notre outil de recherche</h1>
{% if code_commune%}
<p class="text-lg text-center text-gray-800 dark:text-white lg:text-4xl">Le code commune est le suivant : {{ code_commune }}</p>
{% else %}
{% for message in app.flashes('error') %}
<div role="alert" class="rounded-md border border-red-500 bg-red-50 p-4 shadow-sm mt-8">
  <div class="flex items-start gap-4">
    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="-mt-0.5 size-6 text-red-700">
      <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v3.75m9-.75a9 9 0 1 1-18 0 9 9 0 0 1 18 0Zm-9 3.75h.008v.008H12v-.008Z"></path>
    </svg>

    <div class="flex-1">
      <strong class="block leading-tight font-medium text-red-800">Une erreur est survenue : </strong>

      <p class="mt-0.5 text-sm text-red-700">
        {{ message }}
      </p>
    </div>
  </div>
</div>
{% endfor %}
{% endif %}
</section>
{% endblock %}
