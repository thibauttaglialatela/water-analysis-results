{% extends 'base.html.twig' %}

{% block title %}
	{{ parent() }}
	- Formulaire de recherche
{% endblock %}

{% block body %}
	<section class="container px-6 py-16 mx-auto">
		<article class="items-center lg:flex lg:justify-center">
			<section class="w-full lg:w-1/2">
				<article class="lg:max-w-xl">
					<h1 class="text-3xl font-semibold text-center text-gray-800 dark:text-white lg:text-4xl">Notre outil de recherche</h1>
					{{ form_start(form, {'attr': {'class': 'mt-6'}}) }}
					{{ component('SearchFormRow', {
						field: form.city,
						label: 'Rechercher une ville par son nom'
					})}}
					{{ form_end(form) }}

					{{ form_start(insee_code_form, {'attr': {'class': 'mt-6'}}) }}
					{{ component('SearchFormRow', {
						field: insee_code_form.insee_code,
						label: 'Rechercher une ville par son code INSEE'
					})}}
					{{ form_end(insee_code_form) }}
				</article>
			</section>
		</article>
	</section>
{% endblock %}
